<Window x:Class="Perfy.Dialogs.HelpDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:dlg="clr-namespace:Perfy.Dialogs"
		Loaded="Window_Loaded"
        Title="Perfy Help" Height="600" Width="800">
	
	<Window.Resources>
		
		<dlg:HelpDocument x:Key="HelpDocument" />
		
	</Window.Resources>

	<FlowDocumentReader x:Name="Viewer" Document="{StaticResource HelpDocument}" ViewingMode="Scroll" />

</Window>
