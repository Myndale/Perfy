<Window x:Class="Perfy.Dialogs.HelpDialogBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:dlg="clr-namespace:Perfy.Dialogs"
        Title="Perfy Help" Height="600" Width="800">
	
	<Window.Resources>
		
		<dlg:HelpDocument x:Key="HelpDocument" />
		
	</Window.Resources>

	<FlowDocumentPageViewer Document="{StaticResource HelpDocument}" SnapsToDevicePixels="True"/>

</Window>
